@model OCASIA.Meeting.DAL.ManageUserViewModel
@{
    ViewBag.Title = "change password";
    var code = ViewBag.Code;
    var UserId = ViewBag.UserId;    
}

<div class="login-page">
    <div class="login-wrapper">
        @*@using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msgUpdate", LoadingElementId = "LoadingID", OnComplete = "Close()" }, new { @class = "" }))
            {*@
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { }))
        {
            <div id="msgUpdate">
                @Html.Partial("_Msg")
            </div>
            <h3 class="logintitle">Change Password</h3>
            <hr />
            <div class="form-group">
                <div class="controls">
                    @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control" ,  @autocomplete = "off", @placeholder = "Current Password" })
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="form-group">
                    <div class="controls">
                        @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control" ,  @autocomplete = "off", @placeholder = "New Password" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="controls">
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control" ,  @autocomplete = "off", @placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="controls">
                        <button type="submit" class="btn loginbtn form-control">Confirm</button>
                    </div>
                </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("body").addClass("modal-open", "");
        //$("#navbar").hide();
        //$("#sidebar").removeClass("navbar-collapse collapse", "");
        //$("#sidebar").addClass("navbar", "");
        //$("#sidebar").hide();
        Close = function () {
            $("#OldPassword").val('');
            $("#NewPassword").val('');
            $("#ConfirmPassword").val('');           
            $("body").addClass("modal-open", "");
        };
        setTimeout('$(".autohide").hide()', 5000);
    </script>
}
