@using OCASIA.Meeting.DAL.ApplicationModels
@{
    ViewBag.Title = "information";
    MeetingDetail data = ViewBag.MeetingDetails;
    TabDetailModel InformationTab = ViewBag.InformationTab as TabDetailModel;
}
<div class="container">
    <div class="row">
        <div class="col-md-8 ">

            @using (Ajax.BeginForm("PersonalDetailsView", "Participant", null, new AjaxOptions { UpdateTargetId = "UpdateID", InsertionMode = InsertionMode.Replace }))
            {
                @Html.AntiForgeryToken();


                <div class="content ">
                    <h4 class="title"><b>The @data.MeetingName will start in @data.DaysToGo days</b></h4>

                    @if (InformationTab != null && data != null)
                    {
                        <P>@InformationTab.BasicDescription</P>
                        <img src="@InformationTab.Description1PicturePath">
                        <div class="">
                            @InformationTab.Description1
                        </div>
                        <div class="text-center">
                            <P>The full programme of the meetings is available <a href="@data.SchedulePath">Here</a> </P>
                            <P><a href="@InformationTab.FileName1Path">Click here</a> to find the cultural programme (for accompanying guests) </P>
                        </div>
                        <p>
                        <img src="@InformationTab.Description2PicturePath"><br />
                            </p>
                        <div>
                            <p>
                                @InformationTab.Description2
                            </p>
                            <p>
                                @InformationTab.Description3
                            </p>

                            <p>
                                @InformationTab.Description4
                            </p>
                            <p>
                                Email:<a href="mailto:@data.EmailAddress">@data.EmailAddress</a> <br>
                                Tel: @data.TelephoneNumber
                            </p>
                        </div>

                    }

                </div>
                <div class="text-right  mb_40">
                    <button class="btn btn_org ">NEXT STEP</button>
                </div>
            }
        </div>

        @{
            Html.RenderPartial("_FAQ");
        }

    </div>
</div>

